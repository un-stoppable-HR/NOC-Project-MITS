<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("includes/head", { title: 'Dashboard' }) %>

    <!-- link to stylesheet -->
    <link rel="stylesheet" href="/styles/dashboard.css" />
  </head>

  <body>
    <header>
      <%- include("includes/main-header") %> 
      <%- include("includes/nav-header") %>
    </header>

    <main>
        <section class="heading">
            <h1>NOC - STATISTICS</h1>
        </section>

      <ol class="noc-stats">
        <li>
            <section class="noc-stats-details-container">
              <section class="noc-stats-details-heading">
                <h1>Approved NOC's</h1>
              </section>
              <section class="noc-stats-details-body">
                <p>10</p>
              </section>
            </section>
        </li>
        <li>
            <section class="noc-stats-details-container">
              <section class="noc-stats-details-heading">
                <h1>Pending NOC's</h1>
              </section>
              <section class="noc-stats-details-body">
                <p>10</p>
              </section>
            </section>
        </li>
        <li>
            <section class="noc-stats-details-container">
              <section class="noc-stats-details-heading">
                <h1>Rejected NOC's</h1>
              </section>
              <section class="noc-stats-details-body">
                <p>10</p>
              </section>
            </section>
        </li>
      </ol>

      <section class="table_parent_container">
        <section class="table_container">
          <section class="table_header">
            <h1>NO OBJECTION CERTIFICATES - Status</h1>
          </section>
          <section class="table_body">
            <table>
              <thead>
                <tr>
                  <th>S.No</th>
                  <th>Enrollment Number</th>
                  <th>Name</th>
                  <th>Company Name</th>
                  <th>Department Status</th>
                  <th>T&P Status</th>
                  <th>More Details</th>
                </tr>
              </thead>
              <tbody>
                <% for (let i = 1; i <= 50; i += 3) { %>
                <tr>
                  <td><%= i %></td>
                  <td>0901IO201035</td>
                  <td>Jayesh Patidar</td>
                  <td>Google</td>
                  <td><p class="status approved">Approved</p></td>
                  <td><p class="status pending">Pending</p></td>
                  <td><button class="btn">View</button></td>
                </tr>
                <tr>
                  <td><%= i + 1 %></td>
                  <td>0901IO201035</td>
                  <td>Jayesh Patidar</td>
                  <td>Google</td>
                  <td><p class="status rejected">Rejected</p></td>
                  <td><p class="status pending">Pending</p></td>
                  <td><button class="btn">View</button></td>
                </tr>
                <tr>
                  <td><%= i + 2 %></td>
                  <td>0901IO201035</td>
                  <td>Jayesh Patidar</td>
                  <td>Google</td>
                  <td><p class="status approved">Approved</p></td>
                  <td><p class="status approved">Approved</p></td>
                  <td><button class="btn">View</button></td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </section>
        </section>
      </section>
    </main>

    <footer><%- include("includes/footer") %></footer>
  </body>
</html>
